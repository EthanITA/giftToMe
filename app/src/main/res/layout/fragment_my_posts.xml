<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPostsFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_posts_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/my_posts_text"
        android:layout_alignParentTop="true"

        />
    <TextView
        android:id="@+id/my_posts_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MY POSTs"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/my_posts_text_lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MY POSTs"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        android:layout_below="@+id/my_posts_text"
        />

    <TextView
        android:id="@+id/my_posts_text_lon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MY POSTs"
        android:layout_centerInParent="true"
        android:layout_below="@+id/my_posts_text_lat"
        android:textSize="20dp"
        />
    <Button
        android:text="Post your object"
        android:id="@+id/test_button_my_post_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
    />
    <Button
        android:text="coordinates"
        android:id="@+id/coordinates_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/test_button_my_post_twitter"
    />




</RelativeLayout>